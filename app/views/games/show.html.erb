<h1>Chess Game</h1>
<br/>
<div class='chess_board mx-auto mt-1'>
    <% 8.times do |y_position| %>
        <% 8.times do |x_position| %>
            <div class=' square <%= (y_position + x_position).even? ? 'white' : 'black' %>' x_position=<%= x_position %>    y_position=<%= y_position %>>
              <% piece = @game.piece_at(x_position, y_position) %>

              
                <% if piece %>
                <span class= 'piece piece_<%= piece.piece_color %>'>
                <%= fa_icon('chess-' + piece.type.downcase) %>

                </span>
                <% end %>
            </div>    
        <% end %>
    <% end %>
</div>

<script src="https://unpkg.com/sortablejs@1.8.4/Sortable.min.js"></script>

<%= link_to("Quit game", "/games/:id", method: :delete) %></h1>